CC = gcc
SRC = main.c school.c
NAME = school
OBJ = $(SRC:%.c=%.o)
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: main.o school.o
	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	${CC} -c -o $@ $<

re: fclean all

clean:
	${RM} *~ ${NAME}

oclean:${OBJ}
	${RM} $<

fclean: clean oclean

.PHONY: clean oclean fclean re
