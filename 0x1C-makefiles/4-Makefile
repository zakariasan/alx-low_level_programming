CC = gcc
SRC = main.c school.c
NAME = school
OBJ = $(SRC:%.c=%.o)
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${OBJ} 
	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	${CC} ${CFLAGS} -o $@ $<

re: oclean all

clean:
	${RM} *~ ${NAME}

oclean:${OBJ}
	${RM} $<

fclean: clean oclean

.PHONY: clean oclean fclean re
