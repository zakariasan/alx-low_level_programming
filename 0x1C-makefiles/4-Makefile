CC = gcc
SRC = main.c school.c
NAME = school
OBJ := $(SRCS:%.c=%.o)
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: main.o school.o
	${CC} ${OBJ} -o ${NAME}

main.o:
	${CC} ${CFLAGS} $@

school.o:
	${CC} ${CFLAGS} $@

re: fclean all

clean:
	${RM} *~ ${NAME}

oclean:${OBJ}
	${RM} $<

fclean: clean oclean

.PHONY: clean oclean fclean re
